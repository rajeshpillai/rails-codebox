<%= form_with(model: code, local: true) do |form| %>
  <% if code.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(code.errors.count, "error") %> prohibited this code from being saved:</h2>

      <ul>
        <% code.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :code_lang %>
    <%= form.text_field :code_lang %>
  </div>
  
  <div class="field">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :name %>
  </div>

  <div clas="container">
    <div class="row">
      <div class="col">
        <div class="field">
          <%= form.text_area :css, id: "css_id", placeholder: "CSS" %>
        </div>
        <%= form.text_area :html, id: "html_id", placeholder: "HTML" %>
        <div class="field">
          <%= form.text_area :code, id: "code_id",placeholder: "CODE" %>
        </div>
      </div>
      <div class="col">
        <div class="col-6">
          <iframe title="result" className="iframe" id="iframe"></iframe>
        </div>
      </div>
    </div>
  </div>
  
<% end %>